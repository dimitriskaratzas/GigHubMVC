@model IEnumerable<GigHubMVC.Models.Gig>
@{
    ViewBag.Title = "Home Page";
}

<ul class="gigs">
    @foreach(var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Artist.Name
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
                @*<span class="venue">
                    @gig.Venue
                </span>*@
                <button data-gig-id="@gig.ID" class="btn btn-default btn-sm pull-right js-toggle-attendance">
                    Going?
                </button> 
            </div>
        </li>
    }
    
</ul>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                var button = $(e.target);
                //console.log(button.attr("data-gig-id"));
                $.post("/api/attendances", { gigId: button.attr("data-gig-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    }).fail(function (error) {
                        alert("Something failed!");
                        //console.log(error.responseJSON.Message);
                    });
            });
        });
    </script>
}